<h2>Sign In</h2>
<%= form_for("company", :url => company_session_path, html: {class: "form"}) do |f| %>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Company Email</label>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Email", :id => "inputEmail" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputPassword">Password</label>
    <div class="controls">
      <%= f.password_field :password, :placeholder => "Password", :id => "inputPassword" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <input type="checkbox"> Remember me
      </label>
      <button type="submit" class="btn">Sign in</button>
    </div>
  </div>
<%= link_to "Forgot your password?", new_password_path('company') %>
<% end %>